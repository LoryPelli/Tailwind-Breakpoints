---
import Layout from '../layouts/Layout.astro';
import ScreenSize from '../components/ScreenSize.tsx';
---

<Layout>
    <div
        class="flex flex-col-reverse gap-y-2 text-4xl sm:flex-row-reverse sm:gap-x-2"
