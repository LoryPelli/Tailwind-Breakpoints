---
import Layout from '../layouts/Layout.astro';
import ScreenSize from '../components/ScreenSize.tsx';
---

<Layout>
    <div
        class="flex flex-col-reverse gap-y-2 text-4xl sm:flex-row-reverse sm:gap-x-2"
    >
        <div
            class="flex size-20 cursor-not-allowed items-center justify-center rounded-full border-2 border-dashed bg-white p-4 opacity-60 shadow-2xl select-none 2xl:cursor-pointer 2xl:bg-yellow-400 2xl:opacity-100"
        >
            <span>2xl</span>
        </div>
        <div
            class="flex size-20 cursor-not-allowed items-center justify-center rounded-full border-2 border-dashed bg-white p-4 opacity-60 shadow-2xl select-none xl:cursor-pointer xl:bg-yellow-400 xl:opacity-100 2xl:cursor-not-allowed 2xl:bg-white 2xl:opacity-60"
        >
            <span>xl</span>
        </div>
        <div
            class="flex size-20 cursor-not-allowed items-center justify-center rounded-full border-2 border-dashed bg-white p-4 opacity-60 shadow-2xl select-none lg:cursor-pointer lg:bg-yellow-400 lg:opacity-100 xl:cursor-not-allowed xl:bg-white xl:opacity-60"
        >
            <span>lg</span>
        </div>
        <div
            class="flex size-20 cursor-not-allowed items-center justify-center rounded-full border-2 border-dashed bg-white p-4 opacity-60 shadow-2xl select-none md:cursor-pointer md:bg-yellow-400 md:opacity-100 lg:cursor-not-allowed lg:bg-white lg:opacity-60"
        >
            <span>md</span>
        </div>
        <div
            class="flex size-20 cursor-not-allowed items-center justify-center rounded-full border-2 border-dashed bg-white p-4 opacity-60 shadow-2xl select-none sm:cursor-pointer sm:bg-yellow-400 sm:opacity-100 md:cursor-not-allowed md:bg-white md:opacity-60"
        >
            <span>sm</span>
        </div>
        <div
            class="flex size-20 cursor-pointer items-center justify-center rounded-full border-2 border-dashed bg-yellow-400 p-4 opacity-100 shadow-2xl select-none sm:cursor-not-allowed sm:bg-white sm:opacity-60"
        >
            <span>xs</span>
        </div>
    </div>
    <ScreenSize client:only />
</Layout>
